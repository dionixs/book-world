{
  "name": "book-world",
  "dependencies": {
    "@hotwired/stimulus": "^3.2.1",
    "@hotwired/turbo-rails": "^7.3.0",
    "@popperjs/core": "^2.11.7",
    "@rails/actiontext": "^7.0.4",
    "autoprefixer": "^10.4.14",
    "bootstrap": "^5.2.3",
    "bootstrap-icons": "^1.10.3",
    "esbuild": "^0.17.14",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "sass": "^1.60.0",
    "tom-select": "^2.2.2",
    "trix": "1.3.1"
  },
  "browserslist": [
    "defaults and supports es6-module",
    "maintained node versions"
  ],
  "scripts": {
    "build:css": "yarn build:css:compressed && postcss ./app/assets/builds/application.css --replace --use autoprefixer --no-map",
    "build:css:dev": "sass --style expanded ./app/assets/stylesheets/application.bootstrap.scss ./app/assets/builds/application.css --no-source-map --load-path=node_modules",
    "build:css:compressed": "sass --style compressed ./app/assets/stylesheets/application.bootstrap.scss ./app/assets/builds/application.css --no-source-map --load-path=node_modules",
    "build": "esbuild app/javascript/*.* --bundle --minify --outdir=app/assets/builds --public-path=assets"
  },
  "packageManager": "yarn@3.4.1"
}
