{
  "name": "book-world",
  "dependencies": {
    "@activeadmin/activeadmin": "^2.13.1",
    "@hotwired/stimulus": "^3.2.1",
    "@hotwired/turbo-rails": "^7.3.0",
    "@popperjs/core": "^2.11.7",
    "@rails/actiontext": "^7.0.4",
    "ahoy.js": "^0.4.3",
    "autoprefixer": "^10.4.14",
    "bootstrap": "^5.2.3",
    "bootstrap-icons": "^1.10.3",
    "esbuild": "^0.17.14",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^8.1.0",
    "sass": "^1.60.0",
    "tom-select": "^2.2.2",
    "trix": "1.3.1"
  },
  "browserslist": [
    "defaults and supports es6-module",
    "maintained node versions"
  ],
  "scripts": {
    "build:css:dev": "yarn build:css:application && yarn build:css:active_admin",
    "build:css": "yarn build:css:prod:application && yarn build:css:prod:active_admin && yarn build:css:prod:postcss",
    "build:css:application": "sass --style compressed ./app/assets/stylesheets/application.bootstrap.scss ./app/assets/builds/application.css --no-source-map --load-path=node_modules",
    "build:css:active_admin": "sass --style compressed ./app/assets/stylesheets/active_admin/active_admin.scss ./app/assets/builds/active_admin.css --no-source-map --load-path=node_modules",
    "build:css:prod:application": "yarn build:css:application",
    "build:css:prod:active_admin": "yarn build:css:active_admin",
    "build:css:prod:postcss": "postcss ./app/assets/builds/*.css --use autoprefixer postcss-preset-env --dir ./app/assets/builds",
    "build": "npm-run-all --parallel \"build:* {@}\" --",
    "build:application": "esbuild app/javascript/application.js --bundle --minify --sourcemap --outfile=app/assets/builds/application.js",
    "build:active_admin": "esbuild app/javascript/active_admin.js --bundle --minify --sourcemap --outfile=app/assets/builds/active_admin.js"
  },
  "packageManager": "yarn@3.4.1"
}
