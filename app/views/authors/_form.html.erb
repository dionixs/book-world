<%= simple_form_for(@author) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :photo, as: :file, required: false %>
    <%= f.input :short_name %>
    <%= f.input :full_name %>
    <%= f.input :bio %>
    <%= f.input :birth_date, as: :date, html5: true %>
    <%= f.input :death_date, as: :date, html5: true %>
    <%= f.input :place_of_birth %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success' %>

    <%= link_to 'Delete a book', [:archive, @author], class: 'btn btn-danger',
                data: { turbo: true, turbo_method: :patch,
                        turbo_confirm: 'Are you sure?' } %>
  </div>
<% end %>

