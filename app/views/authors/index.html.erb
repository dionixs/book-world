<% provide(:title, 'Authors') %>

<section class="section section-books">
  <div class="container">
    <div class="wrapper">
      <h1 class="mb-4">Authors</h1>

      <div class="row">
        <%= render partial: 'authors/author', collection: @authors %>
      </div>

      <div class="mt-3 mb-4 text-center">
        <%= link_to "Add New author", new_author_path, class: 'btn btn-primary' %>
      </div>


      <div class="d-flex justify-content-center mt-5 mb-2">
        <%= pagination(@pagy) %>
      </div>
    </div>
  </div>
</section>



