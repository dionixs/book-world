<section class="pt-5">
  <div class="container">
    <div class="d-flex">
      <div class="flex-shrink-0">
        <%= image_tag("books/default_cover.jpg", size: '220x400', alt: "Book Cover", class: "img-fluid") %>
      </div>
      <div class="flex-grow-1 ms-5">
        <h2 class="fw-bold"><%= @book.title %></h2>
        <h3><%= @book.author %></h3>
        <div class="d-flex align-items-center">

          <div class="stars me-2">
            <%= stars_for_rating(@book.rating) %>
          </div>

          <div class="rating">
            <span class="fs-3 my-0"><%= number_with_precision(@book.rating, precision: 2) %></span>
          </div>
        </div>
        <p class="lead w-50 fs-5">
          <%= @book.description %>
        </p>
        <p class="mt-3"><strong>Genre:</strong> <%= @book.genre.capitalize %></p>
      </div>
    </div>
  </div>
</section>