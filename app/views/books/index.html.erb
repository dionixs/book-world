<% provide(:title, 'All Books') %>

<section class="section section-books">
  <div class="container">
    <div class="wrapper">
      <h1 class="pt-2">All Books</h1>

      <div class="row row-cols-2 row-cols-lg-6 g-4 g-lg-6 mt-2">
        <%= render partial: 'books/book', collection: @books %>
      </div>

      <div class="d-flex justify-content-center mt-5 pb-5">
        <%= pagination(@pagy) %>
      </div>
    </div>
  </div>
</section>



