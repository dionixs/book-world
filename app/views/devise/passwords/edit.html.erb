<% provide(:title, 'Change your password') %>

<section class="section-sign-up">
  <div class="container">
    <div class="ui-auth-block">
      <h2 class="ui-auth-block__title">
        Change your password
      </h2>

      <div class="ui-auth-section">
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <div class="ui-auth__error_notification">
            <%= f.error_notification %>
          </div>

          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>

          <div class="ui-auth-field">
            <%= f.input :password,
                        label: "New password",
                        required: true,
                        autofocus: true, label_html: { class: 'ui-auth-field__label' },
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password", class: 'generic-ui-input' } %>
          </div>

          <div class="ui-auth-field">
            <%= f.input :password_confirmation,
                        label: "Confirm your new password",
                        required: true, label_html: { class: 'ui-auth-field__label' },
                        input_html: { autocomplete: "new-password", class: 'generic-ui-input' } %>
          </div>

          <div class="ui-auth-form-buttons">
            <%= f.button :submit, "Change my password", class: 'btn btn-primary' %>
            <div class="ui-auth-form__links">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>