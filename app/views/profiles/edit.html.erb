<% provide(:title, "Настройки профиля") %>

<section class="section section-settings">
  <div class="container">
    <div class="profile-settings">

      <%= render partial: 'profiles/sidebar', locals: { profile: @profile, active_controller: 'profiles' } %>

      <div class="profile-settings--main-wrap">
        <h1>Профиль</h1>
        <div class="ps-description">Основные настройки профиля</div>

        <%= form_with(model: @profile, url: profile_path, method: :patch, id: "profile-settings--form",
                      class: "profile-settings--form ng-pristine ng-valid") do |form| %>
          <div class="field-item">
            <%= form.label :first_name, 'Имя:' %>
            <%= form.text_field :first_name, maxlength: 30, placeholder: "Имя не указано" %>
          </div>

          <div class="field-item">
            <%= form.label :last_name, 'Фамилия:' %>
            <%= form.text_field :last_name, maxlength: 50, placeholder: "Фамилия не указана" %>
          </div>

          <div class="field-item">
            <div class="symbol-counter ng-binding">200</div>
            <%= form.label :bio, 'О себе:' %>
            <%= form.text_area :bio, class: 'profile-bio', cols: 40, rows: 7,
                               placeholder: "Вашим подписчикам будет интересно узнать о вас..." %>
          </div>

          <%= form.submit "Сохранить изменения", class: 'profile--btn-blue' %>
        <% end %>

      </div>

    </div>
  </div>
</section>

