<% provide(:title, "All Reviews for #{@book.title}") %>

<div class="pt-3">
  <div class="row">
    <div class="col-md-2">

    </div>
    <div class="col-md-8">
      <% if @reviews.empty? %>
        <h2 class="text-center mb-4">Reviews not found</h2>

        <%= render partial: 'books/book_review_section', locals: { book: @book, review: @review } %>
      <%  else  %>
        <%= render partial: 'review', collection: @reviews, locals: { book: @book }  %>

        <div class="d-flex justify-content-center mt-5 mb-5">
          <%== pagy_bootstrap_nav(@pagy) %>
        </div>
      <%  end %>
    </div>
  </div>
</div>